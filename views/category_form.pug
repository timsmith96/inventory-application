extends layout

block content

  h1= title

  form(method='POST' action='/category/create')
    label(for='name') Category: 
    input#name(type='text', placeholder='Enter category name...' name='name') 
    label(for='description') Description:
    textarea#name(type='text', name='description' rows='10' cols='30')
    button(type='submit') Submit

  if errors 
    ul 
      for error in errors 
        li!= error.msg

  a(href='/') back to home page
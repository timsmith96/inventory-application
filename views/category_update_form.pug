extends layout

block content

  h1= title

  form(method='POST' action=`${category.url}/update`)
    label(for='name') Category: 
    input#name(type='text', placeholder='Enter category name...' name='name' value=category.name) 
    label(for='description') Description:
    textarea#name(type='text', name='description' rows='10' cols='30') #{category.description.trim()}
    button(type='submit') Submit

  if errors 
    ul 
      for error in errors 
        li!= error.msg

  form(method='POST' action=category.url + '/delete')
    button(type='submit') Delete category

  a(href='/') back to home page